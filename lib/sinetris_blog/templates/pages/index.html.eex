<% current_user = SinetrisBlog.Helper.Application.current_user(@conn) %>
<div class="jumbotron">
  <h1><%= @title %></h1>
  <%= if current_user do %>
    <p>
      <span class="glyphicon glyphicon-ok"></span>
      Hello <%= current_user.username %>!
      <a href="/logout" class="btn btn-primary btn-lg" data-method="DELETE" rel="nofollow">Logout</a>
    </p>
  <%= else %>
    <p><a href="/login" class="btn btn-primary btn-lg" role="button">Login</a></p>
  <%= end %>
</div>
